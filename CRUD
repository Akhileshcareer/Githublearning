        function submitData() {
            $.ajax({
                url: "../MyFirstRegistrationForm/ControllerServlet",
                type: "Post",
                data: {
                    callflag: "insert",
                    first_name: $("#first_name").val(),
                    middle_name: $("#middle_name").val(),
                    last_name: $("#last_name").val(),
                    father_name: $("#father_name").val(),
                    mother_name: $("#mother_name").val()
                },
                success: function (response) {
                    alert(response);
//                    $("#fname").val(data);
                }
            });
        }

    </script>  
    <script>

        function Retrieve() {
            $("#EduTBody").html("");
            $.ajax({
                url: "../MyFirstRegistrationForm/ControllerServlet",
                type: "Post",
                data: {
                    callflag: "retrieve"
                },
                success: function (response) {
                    $("#DataTable").removeAttr("hidden");
                    var data = JSON.parse(response);
                    for (var i = 0; i < data.length; i++)
                    {
                        var html = "<tr id='" + data[i].id + "'>"
                                + "<td id='first" + data[i].id + "'>" + data[i].First_Name + "</td>"
                                + "<td id='middle" + data[i].id + "'>" + data[i].Middle_Name + "</td>"
                                + "<td id='last" + data[i].id + "'>" + data[i].Last_Name + "</td>"
                                + "<td id='father" + data[i].id + "'>" + data[i].Father_Name + "</td>"
                                + "<td id='mother" + data[i].id + "'>" + data[i].Mother_Name + "</td>"
                                + "<td>" + data[i].id + "</td>"
                                + "<td><input type='button' class='btn btn-primary text center' value='edit' id='edit_" + data[i].id + "' onclick='editData(id);'></td>"
                                + "<td><input type='button' class='btn btn-primary text center' value='delete' id='del_" + data[i].id + "' onclick='deleteData($(this));'></td>"
                                + "</tr>";
                        $("#EduTBody").append(html);
                    }
                }
            });
        }
        function editData(id)
        {
            alert(id);
            var idl = $("#" + id).closest("tr").attr("id");
            alert(idl);
            $("#uniqueID").val(idl);
            $("#first_name").val($("#first" + idl).text());
            $("#middle_name").val($("#middle" + idl).text());
            $("#last_name").val($("#last" + idl).text());
            $("#father_name").val($("#father" + idl).text());
            $("#mother_name").val($("#mother" + idl).text());
//            $("#updateData").remove().attr("hidden");
        }
        function updateData()
        {
            alert("Inside Update Method");
            $.ajax(
                    {
                        url: "../MyFirstRegistrationForm/ControllerServlet",
                        type: "POST",
                        data: {callflag: "update",
                            uniqueID:$("#uniqueID").val(),
                            first_name: $("#first_name").val(),
                            middle_name: $("#middle_name").val(),
                            last_name: $("#last_name").val(),
                            father_name: $("#father_name").val(),
                            mother_name: $("#mother_name").val()
                        },

                        success: function (response) {
                            alert(response);

                        }
                    }
            );
        }
    </script>
    <script>
        function deleteData(elem) {
            var x = confirm("Are you sure you want to delete?");
            if (x)
                var id = elem.closest("tr").attr("id");
            $.ajax({
                url: "../MyFirstRegistrationForm/ControllerServlet",
                type: "post",
                data: {
                    id: id,
                    callflag: 'delete'
                },
                success: function (data) {
//                    alert(data);
                    alert("record deleted");
                    elem.closest("tr").remove();
                },
                error: function () {
                    alert("error");
                }
            });
        }

    </script>  
