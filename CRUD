package com.servo.handler;

import com.google.gson.JsonArray;
import com.google.gson.JsonObject;
import com.servo.DBUtils.DBUtils;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.util.List;

/**
 *
 * @author Akhilesh.Kumar
 */
public class DataHandler {

    Connection con = null;
    PreparedStatement pst;
    ResultSet rs;

    public String InsertData(List<String> list) {
        String returnStr = "";
        try {
            String query = "insert into Akhil_Details(FIRST_NAME,MIDDLE_NAME,LAST_NAME,FATHER_NAME,MOTHER_NAME)values(?,?,?,?,?)";
            con = DBUtils.getConnection(con);
            pst = con.prepareStatement(query);
            pst.setString(1, list.get(0));
            pst.setString(2, list.get(1));
            pst.setString(3, list.get(2));
            pst.setString(4, list.get(3));
            pst.setString(5, list.get(4));

            int i = pst.executeUpdate();
            DBUtils.closePrepareStatement(pst);
            if (i > 0) {
                returnStr = "Data inserted successfully!";
            } else {
                returnStr = "Oops.. Something went wrong there..!";
            }
        } catch (Exception ex) {
            ex.printStackTrace();
        } finally {
            DBUtils.closeComnnection(con);
        }
        return returnStr;
    }

    public JsonArray getAllEmployees() {
        JsonArray ja = new JsonArray();
        try {
            con = new DBUtils().getConnection(con);
            pst = con.prepareStatement("select * from Akhil_Details");
            rs = pst.executeQuery();
            while (rs.next()) {
                JsonObject obj = new JsonObject();
                obj.addProperty("First_Name", rs.getString(1));
                obj.addProperty("Middle_Name", rs.getString(2));
                obj.addProperty("Last_Name", rs.getString(3));
                obj.addProperty("Father_Name", rs.getString(4));
                obj.addProperty("Mother_Name", rs.getString(5));
                obj.addProperty("id", rs.getInt(6));
                ja.add(obj);
            }
            con.close();
        } catch (Exception e) {
            e.printStackTrace();
        }
        return ja;
    }

    public int delete(int id) {
        try {
            con = new DBUtils().getConnection(con);
            pst = con.prepareStatement("delete from Akhil_Details where id=?");
            pst.setInt(1, id);
            int i = pst.executeUpdate();
            System.out.println("data deleted successfully");
        } catch (Exception ex) {
            System.out.println(ex);
        }
        return 0;
    }

    public int editData(int id, List<String> list) {
        int i = 0;
        try {
            System.out.println("HEllo");
            Connection con = null;
            con = new DBUtils().getConnection(con);
            String sql = "update AKHIL_DETAILS set FIRST_NAME=?, MIDDLE_NAME=?, LAST_NAME=?, FATHER_NAME=?, MOTHER_NAME=? where ID=?";
            PreparedStatement pst = con.prepareStatement(sql);
            pst.setString(1, list.get(0));
            pst.setString(2, list.get(1));
            pst.setString(3, list.get(2));
            pst.setString(4, list.get(3));
            pst.setString(5, list.get(4));
            pst.setInt(6, id);
            i = pst.executeUpdate();

        } catch (Exception ex) {
//            System.out.println(ex);
            ex.printStackTrace();
        }

        return i;
    }

}
