package com.servo.DBUtils;

import java.net.ConnectException;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

/**
 *
 * @author Akhilesh.Kumar
 */
public class DBUtils {

    public static Connection getConnection(Connection con) throws SQLException {
        if (con == null || con.isClosed()) {
            try {
                Class.forName("oracle.jdbc.driver.OracleDriver");
                con = DriverManager.getConnection("jdbc:oracle:thin:@192.168.1.24:1521:orcl", "C##test_admin", "system123#");
            } catch (Exception ex) {
                ex.printStackTrace();
            }
            return con;
        } else {
            return con;
        }
    }

    public static void closeComnnection(Connection con) {

    }

    public static void closePrepareStatement(PreparedStatement pSmt) {

    }

    public static void closeResultSet(ResultSet pSmt) {

    }
}




